<% @posts.each do |post| %>
<div>
<P><%= image_tag(post.image.url) if post.image&&post.image.url%></p>
<P>タイトル：<%= post.title %></p>
<P>コンテンツ：<%= post.content%></p>
<P>名前：<%= User.find_by(id: post.user_id).name %></p>
<P><%= link_to "show", post_path(post.id) %></p>
</div>

<% if post.user_id == current_user.id %>
<%= link_to "edit", edit_post_path(post.id) %>
<%= link_to "delete", post_path(post.id),data:{confirm:'削除しますか'},method: :delete %>
<% end %>
<% end %>

<%= link_to "投稿", new_post_path %>
