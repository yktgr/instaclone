<h1>Show</h1>
<div class = "offset-md-3 col-mid-3">

<table>
  <tr><td><%= image_tag(@post.image.url) if @post.image&&@post.image.url%></td></tr>
  <tr><th>Title：</th><td>T<%= @post.title %></td></tr>
  <tr><th>Content：</th><td><%= @post.content%></td></tr>
  <tr><th>User：</th><td><%= User.find_by(id: @post.user_id).name %></td></tr>
</table>

<% unless @post.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(post_id: @post.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>
</div>
