<h1>Create User</h1>





<%= form_with(model:@user,local:true) do |f| %>


  <% if @user.errors.any? %>
    <div class= "alert alert-warning" role="alert" >
      <% @user.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
      <% end %>
    </div>
  <% end %>


<div class= "offset-3 col-md-3">

<table>
  <tr><td><%= image_tag(@user.image.url)if @user.image&&@user.image.url %></td>
  <td><%= f.file_field :image %></td>
  <td><%= f.hidden_field :image_cache %></tr>
  <tr><th><%= f.label:name %></th><td><%= f.text_field:name %></td></tr>
  <tr><th><%= f.label:email %></th><td><%= f.email_field:email %></td></tr>
  <tr><th><%= f.label:password %></th><td><%= f.password_field:password %></td></tr>
  <tr><th><%= f.label:password_comfirm %></th><td><%= f.password_field:password %></td></tr>
</table>

<%= f.submit "Create User" ,class:'btn btn-primary' %>

<% end %>
</div>
